<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        MaxWidth="800" 
        MinWidth="800" 
        MinHeight="450"
        MaxHeight="450"
        x:Class="Afanasev.AddUserWindow"
        Title="Добавление пользователя">
    <StackPanel>
        <StackPanel>
           <TextBlock Text="Добавление пользователя"
                      FontSize="30"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,20,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Vertical"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Margin="60">


              <TextBlock Text="Логин для пользователя"
                         Margin="0,0,0,3"
                         HorizontalAlignment="Center"/>
              <TextBox Name="loginTxt"
                       Width="200"
                       HorizontalAlignment="Center"/>
              <TextBlock Text="Пароль для пользователя"
                         HorizontalAlignment="Center"
                       Margin="0,10,0,3"/>
              <TextBox Name="passwordTxt"
                       Width="200"
                       HorizontalAlignment="Center"/>
             <TextBlock Text="Выберите роль пользователя"
                       Margin="0,10,0,5"
                       HorizontalAlignment="Center"/>
             <ComboBox Name="RoleCombo"
                       HorizontalAlignment="Center"
                       Width="200"/>
            <TextBlock Name="ErrorTxt"
                       TextWrapping="Wrap"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Width="250"
                       MaxLines="2"/>
              <Button Content="Добавить пользователя"
                      Name="AddUser"
                      Width="200"
                      Height="35"
                      VerticalContentAlignment="Center"
                      Background="White"
                      BorderBrush="Black"
                      CornerRadius="10"
                      HorizontalContentAlignment="Center"
                      HorizontalAlignment="Center"
                      Margin="0,15,0,0"
                      Click="AddUser_Click"/>
              <Button Content="Назад"
                      Width="100"
                      Height="35"
                      Name="Back"
                      VerticalContentAlignment="Center"
                      Background="White"
                      BorderBrush="Black"
                      CornerRadius="10"
                      HorizontalContentAlignment="Center"
                      HorizontalAlignment="Center"
                      Margin="0,15,0,0"
                      Click="Back_Click"/>

        </StackPanel>
    </StackPanel>
</Window>
